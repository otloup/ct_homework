{% extends 'base.html.twig' %}

{% block body %}

    <h1>Add new user</h1>

    {% if errors|length %}
        <div class="alert alert-warning">
            <p>
                It looks like some errors has occured while trying to save supplied data
            </p>

            {% for field,error in errors %}
                <b>{{ field }}</b>: {{ error }} <br>
            {% endfor %}
        </div>
    {% endif %}

    {% form_theme form 'bootstrap_3_layout.html.twig' %}

    {{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}